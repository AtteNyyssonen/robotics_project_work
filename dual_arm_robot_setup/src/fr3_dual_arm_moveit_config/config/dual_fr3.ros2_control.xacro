        <gazebo>
          <plugin filename="franka_gz_ros2_control-system" name="gz_ros2_control::GZROS2ControlPlugin">
            <parameters>$(find fr3_dual_arm_moveit_config)/config/ros2_controllers.yaml</parameters>
          </plugin>
        </gazebo>
    </xacro:macro>
</robot>
